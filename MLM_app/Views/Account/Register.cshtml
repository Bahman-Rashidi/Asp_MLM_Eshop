            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(m => m.NationalCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.NationalCode, new { htmlAttributes = new { @placeholder = "SIN Number" } })
