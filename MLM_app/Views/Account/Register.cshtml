    <div class="row mb-3" style="background-color: azure">
        @Html.LabelFor(m => m.ParentPasswordUser, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ParentPasswordUser, new { htmlAttributes = new { @placeholder = "The password should be requested from the upper-level user" } })
        </div>
    </div>

    <div class="row mb-3" style="background-color: azure">
        @Html.LabelFor(m => m.ParentNationalCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ParentNationalCode, new { htmlAttributes = new { @placeholder = "upper-level user SIN Number User " } })
        </div>
    </div>

    <div class="row mb-3">
            @Html.LabelFor(m => m.EnglishName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
