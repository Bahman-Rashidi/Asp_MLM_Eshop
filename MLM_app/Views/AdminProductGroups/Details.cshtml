@model MLM_app.Models.ProductGroup

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMLM.cshtml";
}

<h2 class="title text-center">Product group Details</h2>

<fieldset>
    <dl class="dl-horizontal">
        <dt>
            Parent of the product group
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Parent.ProductGroupTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductGroupTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductGroupTitle)
        </dd>      
        <dd>
            @Html.DisplayFor(model => model.NameInSystem)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd>
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.ProductGroupTitle" />
        </dd>

    </dl>
</fieldset>

<div class="form-group" id="buttons">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ProductGroupID })
        @Html.ActionLink("Back to the menu", "Index")
    </div>
</div>
