@model IEnumerable<MLM_app.Models.PageGroup>

@{
    ViewBag.Title = "List of Page Groups";
    Layout = "~/Views/Shared/_LayoutMLM.cshtml";
}

<h2 class="title text-center">List of Page Groups</h2>
<section id="cart_items">
    <div class="container">
        @Html.ActionLink("Create News Group", "Create", null, new { @class = "btn btn-primary" })
        <p></p>
        <div class="table-responsive cart_info">
            <table class="table table-condensed table-hover">
                <thead>
                    <tr class="cart_menu text-center">
                        <td>
                            @Html.DisplayNameFor(model => model.PageGroupTitle)
                        </td>
                        <td>Operation</td>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2">No information available for display.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PageGroupTitle)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PageGroupId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.PageGroupId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PageGroupId })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
