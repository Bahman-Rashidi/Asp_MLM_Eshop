@model IEnumerable<MLM_app.Models.Product>
@using MLM_app.Helpers
@{
    ViewBag.Title = "Display product list";
    Layout = "~/Views/Shared/_LayoutMLM.cshtml";
}

<div id="container" class="hide">
    <div class="col-sm-12">
        <div id="comp" class="col-md-3 pull-left">
            <a id="compare" href="\compare?a=123&b=124&c=125&d126" class="btn btn-success" role="button">Compare</a>
            <a href="#" id="delete" class="btn btn-danger" role="button">Delete همه</a>
        </div>

        <div class="col-md-3 pull-right">
            <p class="count">0 Item in list</p>
        </div>

    </div>
    <br />
</div>

<div class="col-sm-9 padding-left">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Available items</h2>

        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img class="appendimg" src="@Url.Content(item.ProductThumbnailImageUrl)" alt="@item.ProductTitle" />
                            <h2>@Html.OffProduct(item.Off, item.ProductPrice)</h2>
                            <p>@item.ProductTitle</p>

                            <a id="btnAddToBasket_@item.ProductID" href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to Cart</a>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <h2>
                                    @Html.OffProduct(item.Off, item.ProductPrice)
                                    @*@item.ProductPrice.ToString("#,0 $")*@
                                </h2>
                                <p>@item.ProductTitle</p>
                                <a id="btnAddToBasket_@item.ProductID" href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to Cart</a>
                            </div>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <a href="/product/@item.ProductID/@item.ProductTitle"><i class="fa fa-list"></i>Product Details</a>
                            <li>
                                <a href="#" class="more"><i class="fa fa-plus-square"></i>Compare</a>
                                <b class="ProdId hidden">@item.ProductID</b>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        }
    </div><!--features_items-->
</div>





