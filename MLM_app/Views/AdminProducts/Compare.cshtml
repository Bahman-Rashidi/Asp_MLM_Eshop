@model IEnumerable<MLM_app.Models.Product>
@{
    ViewBag.Title = "Compare products";
    Layout = "~/Views/Shared/_LayoutMLM.cshtml";
}

<div class="col-sm-9 padding-left">
    @foreach (var item in Model)
    {
        <div class="product-details">
            <!--product-details-->
            <div class="col-sm-5">
                <div class="view-product">
                    <img width="266" height="381" src="@Url.Content(item.ImageUrl)" alt="@item.ProductTitle" />

                </div>


            </div>
            <div class="col-sm-7">
                <div class="product-information">
                    <!--/product-information-->
                    <h2>@item.ProductGroups.ProductGroupTitle</h2>
                    <p>Model : @item.ProductTitle</p>

                    <span>
                        <span>@item.ProductPrice.ToString("#,0 $")</span>

                        <button id="btnAddToBasket_@item.ProductID" type="button" class="btn btn-default cart">
                            <i class="fa fa-shopping-cart"></i>
                            add 
                        </button>
                    </span>
                    <p><b>status :</b> current</p>
                    <p><b>brand :</b>@item.ProductGroups.ProductGroupTitle</p>

                </div><!--/product-information-->
            </div>
        </div><!--/product-details-->

        <div class="category-tab shop-details-tab">
            <div class="col-sm-12">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#reviews" data-toggle="tab">Description</a></li>
                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade active in" id="reviews">
                    <div class="col-sm-12">
                        <p>
                            @Html.Raw(item.ProductDescription)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

