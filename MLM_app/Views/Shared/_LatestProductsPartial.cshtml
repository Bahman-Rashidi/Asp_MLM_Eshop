@using MLM_app.Helpers
@using MLM_app.Models
@{
    var db = new ApplicationDbContext();
}

@foreach (var item in db.Products.OrderByDescending(p => p.ProductID).Take(100))
{
    <div class="col-sm-3 column productbox">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    
                    <div class="caption" style="display: none; overflow: hidden; height: 313px; padding-top: 28.25px; margin-top: 0px; padding-bottom: 28.25px; margin-bottom: 0px;">
                        <h4>@item.ProductTitle</h4>
                        <h2>@Html.OffProduct(item.Off, item.ProductPrice)</h2>

                        @if (item.AvailableNumber > 0)
                        {
                            <a id="btnAddToBasket_@item.ProductID" href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to Cart</a>
                        }
                        else
                        {
                            <h1>Finished</h1>
                        }
                        <h5>@item.AvailableNumber</h5>
                        @*<h5>@item.LicenseNumber</h5>*@
                        <p>
                            <a class="label label-danger" href="/product/@item.ProductID/@item.ProductTitle">Product Details</a>
                        </p>
                    </div>
                    <img  class="logo" src="@Url.Content(item.ProductThumbnailImageUrl)" alt="@item.ProductTitle" />
                </div>

            </div>
        </div>
    </div>

}


