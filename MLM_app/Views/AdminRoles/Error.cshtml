@model IEnumerable<string>
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayoutMLM.cshtml";
}




<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @:An error occurred. Please try again.
            break;

        case 1:
            @Model.First();
            break;

        default:
            @:The system encountered the following errors during the processing of operations:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("Confirm", "Index", null, new { @class = "btn btn-default" })
