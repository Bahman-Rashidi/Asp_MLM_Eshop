@model MLM_app.Models.Contact
@{
    ViewBag.Title = "contact us";
Layout = "~/Views/Shared/_LayoutMLM.cshtml";
}

<div class="contact-info">
    <h2 class="title text-center">Complaint Form</h2>
    <address>
        @Html.Raw(ViewBag.Contact)
    </address>
</div>





<h3 dir="RTL">To submit your complaints, please fill out the form below or contact the provided numbers</h3>

@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { id = "main-contact-form", @class = "contact-form row" }))
{
    @Html.AntiForgeryToken()

    <div id="contact-page" class="contact-form">
        <h2 class="title text-center">Contact Us</h2>
        <div class="status alert alert-success" style="display: none"></div>
        @{Html.RenderPartial("_AlertPartial");}

        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "Name" } })
            </div>
            <div class="form-group col-md-4">
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email" } })
            </div>
            <div class="form-group col-md-4">
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Subject, new { @class = "control-label col-md-2" })
            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @placeholder = "Subject" } })
            </div>
            <div class="form-group col-md-4">
                @Html.ValidationMessageFor(model => model.Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Body, new { @class = "control-label col-md-2" })
            <div class="form-group col-md-8">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @placeholder = "Message", @class = "form-control", @style = "with:100%;height:200px" } })
            </div>
            <div class="form-group col-md-2">
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Captcha, new { @class = "control-label col-md-2" })

            <div class="form-group col-md-6">
                @Html.EditorFor(model => model.Captcha, new { htmlAttributes = new { @placeholder = "ResultOfSum" } })
            </div>
            <div class="form-group col-md-4">
                <input type="button" value="" id="refresh" class="btn btn-default" />
                <img alt="Captcha" id="imgcpatcha" src="@Url.Action("captchaimage","Captcha")" />

                @Html.ValidationMessageFor(model => model.Captcha)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submit" value="Send" class="btn btn-primary pull-left" />
            </div>

        </div>
    </div>
}

<br/>

<div>
    <h1 dir="RTL">
       Canada _ tornto 
    </h1>
    
    <br/>
    <h1 dir="RTL">
      phone number
    </h1>
   
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">
    $('#refresh').click(function () {
        var d = new Date();
        $("#imgcpatcha").attr("src", "http://" + window.location.host + "/Captcha/CaptchaImage?" + d.getTime());
    });
</script>
